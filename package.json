{
  "name": "crimconsortium-static-hub",
  "version": "1.0.0",
  "description": "Static site generator for CrimConsortium member publications on Arweave",
  "main": "index.js",
  "scripts": {
    "test-foundation": "node scripts/test-foundation.js",
    "verify-setup": "node scripts/test-foundation.js",
    "analyze-consortium": "node scripts/analyze-consortium.js",
    "import": "node scripts/finalize-consortium-data.js",
    "scrape": "node scripts/scrape-consortium-robust.js",
    "sync": "node scripts/sync-ardrive.js", 
    "build": "node scripts/build-site-robust.js",
    "validate": "node scripts/validate-build.js",
    "deploy": "node scripts/deploy-arweave.js",
    "dev": "node scripts/serve.js",
    "full": "npm run analyze-consortium && npm run import && npm run sync && npm run build && npm run deploy",
    "help": "node scripts/show-help.js"
  },
  "dependencies": {
    "ardrive-core-js": "^1.1.0",
    "cheerio": "1.0.0-rc.12",
    "axios": "^1.6.0", 
    "fs-extra": "^11.2.0",
    "xml2js": "^0.6.2",
    "lunr": "^2.3.9",
    "handlebars": "^4.7.8",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@ar.io/sdk": "^1.0.0"
  },
  "type": "module"
}