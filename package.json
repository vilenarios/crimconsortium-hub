{
  "name": "crimconsortium-static-hub",
  "version": "1.0.0",
  "description": "Static site generator for CrimConsortium member publications on Arweave",
  "main": "index.js",
  "scripts": {
    "import": "node scripts/robust-incremental-scraper.js",
    "import-legacy": "node scripts/enhanced-consortium-scraper.js",
    "status": "node scripts/scraping-status.js",
    "build": "node scripts/build-enhanced-complete.js",
    "sync": "node scripts/sync-ardrive-fixed.js", 
    "deploy": "node scripts/deploy-arweave.js",
    "dev": "node scripts/serve.js",
    "validate": "node scripts/validate-build.js",
    "preview": "npm run build && npm run dev",
    "reset": "rm -rf data/final/* && npm run import",
    "full": "npm run import && npm run build && npm run sync && npm run deploy"
  },
  "dependencies": {
    "ardrive-core-js": "^1.1.0",
    "cheerio": "1.0.0-rc.12",
    "axios": "^1.6.0", 
    "fs-extra": "^11.2.0",
    "xml2js": "^0.6.2",
    "lunr": "^2.3.9",
    "handlebars": "^4.7.8",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@ar.io/sdk": "^1.0.0"
  },
  "type": "module"
}